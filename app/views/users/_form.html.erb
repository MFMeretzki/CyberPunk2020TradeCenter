<%= form_with(model: user, local: true) do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :nick %>
    <%= form.text_field :nick %>
  </div>

  <div class="field">
    <%= form.label :password, 'Password' %>
    <%= form.text_field :password %>
  </div>

  <div class="field">
    <%= form.label :password_confirmation, 'Confirm' %>
    <%= form.text_field :password_confirmation %>
  </div>
	
	<div class="field">
		<%= label :user_type_basic, 'Basic' %>
		<%= form.radio_button :user_type, 1, :checked => true %>
		<%= label :user_type_business, 'Business' %>
		<%= form.radio_button :user_type, 2 %>
	</div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
