<div class= "login_form" >
	<% if flash[:alert] %>
		<p id= "notice" ><%= flash[:alert] %></p>
	<% end %>
	
	<%= form_with url: login_url, method: :post, local: true do %>
		<div class="row">
			<div class="col-25">
				<label for="nick">Nick:</label>
			</div>
			<div class="col-75">
				<%= text_field_tag :nick, params[:nick] %>
			</div>
		</div>
		
		<div class="row">
			<div class="col-25">
				<label for="password">Password:</label>
			</div>
			<div class="col-75">
				<%= password_field_tag :password, params[:password] %>
			</div>
		</div>
		
		<div class="row">
			<%= submit_tag "Submit"%>
		</div>
	<% end %>
	
</div>