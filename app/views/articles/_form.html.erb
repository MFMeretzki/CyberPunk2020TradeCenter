<div class="article_form">
<%= form_with model: @article, url: user_articles_path(session[:user_id]), method: :post, local: true do |form| %>
 
  <% if @article.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@article.errors.count, "error") %> prohibited
        this article from being saved:
      </h2>
      <ul>
        <% @article.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
 
	<div class="row">
		<div class="col-25">
			<%= form.label :title %>
		</div>
		<div class="col-75">
			<%= form.text_field :title %>
		</div>
	</div>
 
	<div class="row">
		<div class="col-25">
			<%= form.label :subtitle %>
		</div>
		<div class="col-75">
			<%= form.text_field :subtitle %>
		</div>
	</div>
 
	<div class="row">
		<div class="col-25">
			<%= form.label :resume %>
		</div>
		<div class="col-75">
			<%= form.text_area :resume %>
		</div>
	</div>
 
	<div class="row">
		<div class="col-25">
			<%= form.label :body_text %>
		</div>
		<div class="col-75">
			<%= form.text_area :body_text, class: "body_text" %>
		</div>
	</div>
		
	<div class="row">
		<%= submit_tag "Submit"%>
	</div>
 
<% end %>
</div>