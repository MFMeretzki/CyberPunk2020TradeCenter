<% if @article_chats.first != nil %>

<div class="title">
	<h1>Chats from <%= @article_chats.first.article_title %></h1>
</div>

<div class="chat_teaser_wrap">
	<%= render partial: "chats/chat_teaser2", collection: @article_chats %>
</div>

<% else %>

<div class="title">
	<h1>No chats</h1>
</div>

<% end %>